<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CollageMaker" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue_var1</item>
        <item name="colorOnPrimary">@color/g_yellow</item>

        <item name="android:background">@color/blue_var1</item>
        <item name="android:navigationBarColor">@color/blue_var2</item>
        <item name="android:navigationBarDividerColor">@color/green</item>
    </style>

    <style name="btn_style">
        <item name="android:backgroundTint">@color/blue_var1</item>
    </style>

    <style name="image_style">
        <item name="android:layout_width">215dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="layout_constraintDimensionRatio">H,1:1</item>
    </style>

    <style name="font">
        <item name="android:fontFamily">@font/yesteryear</item>
        <item name="android:textColor">@color/g_yellow</item>
        <item name="android:textAlignment">center</item>
    </style>
</resources>